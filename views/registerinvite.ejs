<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>
    <style>
/* Reset some default styles for better consistency across browsers */
body, h1, form {
    margin: 0;
    padding: 0;
}

body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0; /* Light gray background */
    padding: 20px; /* Add padding to the entire page */
}

.container {
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff; /* White container background */
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Box shadow for a card-like effect */
}

h1 {
    text-align: center;
    color: #007bff; /* Blue header text color */
}

form {
    margin-top: 20px;
}

label {
    display: block;
    margin-bottom: 8px;
    color: #333; /* Label text color */
}

input[type="text"],
input[type="email"],
input[type="password"] {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

button[type="submit"] {
    width: 100%;
    padding: 10px;
    background-color: #007bff; /* Blue button background color */
    border: none;
    border-radius: 5px;
    color: #fff; /* Button text color */
    font-weight: bold;
    cursor: pointer;
}

button[type="submit"]:hover {
    background-color: #0056b3; /* Darker blue on hover */
}

    </style>
</head>
<body>
    <h1>Registration Form</h1>
    <form action="/register" method="POST">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= email %>" required disabled>
        </div>
        <div>
            <label for="phone">Phone Number:</label>
            <input type="text" id="phone" name="phone" required>
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div>
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div>
        <button type="submit">Register</button>
    </form>

    <script>
        // Disable the email field
        const emailInput = document.getElementById('email');
        emailInput.disabled = true;

        // Simple phone number validation using JavaScript
        const phoneInput = document.getElementById('phone');
        phoneInput.addEventListener('input', () => {
            const phone = phoneInput.value;
            const phonePattern = /^\d{10}$/; // Assumes a 10-digit phone number
            if (!phonePattern.test(phone)) {
                phoneInput.setCustomValidity('Please enter a valid 10-digit phone number');
            } else {
                phoneInput.setCustomValidity('');
            }
        });
    </script>
</body>
</html>